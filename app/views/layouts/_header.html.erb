<div class="header pure-menu pure-menu-horizontal">
	<ul class="menu pure-menu-list">
		<li class="menu-item pure-menu-item">
			<%= link_to "🏠Home", root_path %>
		</li>
		<% if session[:user_id] %>
			<div class="manage-login">
				<li class="menu-item create pure-menu-item">
					<%= link_to "Create", new_survey_path %>
				</li>
				<ul class="pure-menu-item" id="flex-out">
					<span class='slideout'>
						<li class="menu-item pure-menu-item">
							<%= link_to "My Surveys", mysurveys_path %>
						</li>
						<li class="menu-item pure-menu-item">
							<%= link_to "Logout", logout_path %>
						</li>
					</span>
					<li class="menu-item-special">
					<% name = @user.name.capitalize rescue nil %>
					<% @user ||= "#" %>
					<%= link_to "👤#{name}", edit_user_path(@user) %>
					</li>	
				</ul>
			</div>
		<% else %>
			<div class="manage-login">
				<li class="menu-item pure-menu-item">
					<%= link_to "Sign up", new_user_path %>
				</li>
				<li class="menu-item pure-menu-item">
					<%= link_to "Login", login_path%>
				</li>
			</div>
		<% end %>
	</ul>
</div>
