<div class="header pure-menu pure-menu-horizontal">
	<ul class="menu pure-menu-list">
		<li class="menu-item pure-menu-item">
			<%= link_to "Home", root_path %>
		</li>
		<% if session[:user_id] %>
		<div class="manage-login">
			<li class="menu-item create pure-menu-item">
				<%= link_to "Create Survey", new_survey_path %>
			</li>
			<li class="menu-item pure-menu-item slideout-item">
				<%= link_to "My Surveys", mysurveys_path %>
			</li>
			<li class="menu-item pure-menu-item slideout-item">
				<%= link_to "Logout", logout_path %>
			</li>
			<li class="menu-item-special pure-menu-item">
				<%= @user.name rescue nil %>
			</li>
		</div>
		<% else %>
		<div class="manage-login">
			<li class="menu-item pure-menu-item">
				<%= link_to "Sign up", new_user_path %>
			</li>
			<li class="menu-item pure-menu-item">
				<%= link_to "Login", login_path%>
			</li>
		</div>
		<% end %>
	</ul>
</div>
